{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // transpile JSX to React.createElement
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    },
  },  
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
